    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "/dist"
  ],
  "peerDependencies": {
    "hd-web": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0"
  },
  "sideEffects": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/hrd543/hd-web"
  }
}
