{
  "name": "hd-web-repo",
  "version": "0.0.1",
  "description": "A set of open source packages to help you quickly create static websites with a splash of interactivity using the html, css and js you already know.",
  "scripts": {
    "build": "npm run build --workspaces",
    "lint:eslint": "eslint",
    "test": "npm run test --workspaces"
  },
  "workspaces": [
    "packages/jsx",
    "packages/hd-web",
    "packages/components",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.9.1",
    "@types/node": "^22.13.5",
    "eslint": "^9.21.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "engines": {
    "node": "^22.0.0"
  }
}
