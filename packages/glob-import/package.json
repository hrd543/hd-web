{
  "name": "@hd-web/glob-import",
  "version": "2.0.0",
  "description": "Provides support for importing a file glob",
  "scripts": {
    "build": "tsc",
    "test": "npm run test:file \"src/**/*.test.ts\"",
    "test:file": "node --import tsx --test"
  },
